:root {
  color-scheme: light;
  --bg: #ffffff;
  --text: #1f2a44;
  --muted: #64748b;
  --border: #e2e8f0;
  --accent: #111827;
  --accent-contrast: #ffffff;
  --soft: #f8fafc;
}

* {
  box-sizing: border-box;
}

body {
  margin: 0;
  font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
  color: var(--text);
  background: var(--bg);
  line-height: 1.65;
}

main {
  max-width: 720px;
  margin: 0 auto;
  padding: 24px;
}

@media (min-width: 768px) {
  main {
    padding: 40px;
    font-size: 19px;
  }
}

.section,
.intro {
  margin-bottom: 56px;
}

@media (min-width: 768px) {
  .section,
  .intro {
    margin-bottom: 80px;
  }
}

h1 {
  font-size: clamp(1.9rem, 4vw, 2.7rem);
  line-height: 1.2;
  margin: 0 0 32px;
}

h2 {
  font-size: clamp(1.5rem, 2.5vw, 1.9rem);
  line-height: 1.3;
  margin: 0 0 20px;
}

p {
  margin: 0 0 18px;
}

.note {
  color: var(--muted);
  font-size: 0.95rem;
  margin-top: 8px;
}

footer {
  border-top: 1px solid var(--border);
  padding-top: 32px;
  margin-top: 56px;
}

.footer-note {
  color: var(--muted);
  font-size: 0.85rem;
  margin: 0;
  text-align: center;
}

.hero-illustration {
  display: block;
  width: min(100%, 720px);
  height: auto;
  margin: 18px auto 26px;
}

@media (max-width: 520px) {
  .hero-illustration {
    width: 92%;
    margin: 14px auto 22px;
  }
}
